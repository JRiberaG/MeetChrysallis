<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.DatosPersonalesActivity"
    android:background="@drawable/gradient_background"
    android:orientation="vertical"
    android:paddingLeft="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/datos_personales_btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:paddingLeft="10dp"
            android:background="@null"
            app:srcCompat="@drawable/ic_chevron_left_black_24dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="@string/modificar_datos_personales"
            android:textSize="@dimen/txt_subHeader"
            android:textStyle="bold"
            android:layout_gravity="center"/>
    </LinearLayout>

    <!-- LAYOUT CORREO -->
    <LinearLayout
        android:id="@+id/datos_personales_layout_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="20dp"
        android:paddingLeft="5dp">
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                app:srcCompat="@drawable/ic_email_black_24dp"
                android:background="@null"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/correo"
                android:layout_gravity="center"
                android:paddingLeft="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="10dp"
            android:gravity="end"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/datos_personales_tvCorreo"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textSize="@dimen/txt_body2"
                android:textColor="@color/colorAccent"
                android:gravity="end"
                android:text="emaildeprueba@prueba.com"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_gravity="center"/>
            <ImageView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_chevron_right_black_24dp"/>
        </LinearLayout>
    </LinearLayout>
    <!-- LINEAR DIVISORIO -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/md_yellow_700"/>
    <!-- LAYOUT CONTRASEÃ‘A -->
    <LinearLayout
        android:id="@+id/datos_personales_layout_contrasenya"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="20dp"
        android:paddingLeft="5dp">
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                app:srcCompat="@drawable/ic_lock_black_24dp"
                android:background="@null"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contrasenya"
                android:layout_gravity="center"
                android:paddingLeft="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="10dp"
            android:gravity="end"
            android:layout_gravity="center">
            <TextView
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textSize="@dimen/txt_body2"
                android:textColor="@color/colorAccent"
                android:gravity="end"
                android:text="**********"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_gravity="center"/>
            <ImageView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_chevron_right_black_24dp"/>
        </LinearLayout>
    </LinearLayout>
    <!-- LINEAR DIVISORIO -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/md_yellow_700"/>
    <!-- LAYOUT IDIOMA -->
    <LinearLayout
        android:id="@+id/datos_personales_layout_idioma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="20dp"
        android:paddingLeft="5dp">
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                app:srcCompat="@drawable/ic_language_black_24dp"
                android:background="@null"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/idioma"
                android:layout_gravity="center"
                android:paddingLeft="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="10dp"
            android:gravity="end"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/datos_personales_tvIdioma"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textSize="@dimen/txt_body2"
                android:textColor="@color/colorAccent"
                android:gravity="end"
                android:text="castellano"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_gravity="center"/>
            <ImageView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_chevron_right_black_24dp"/>
        </LinearLayout>
    </LinearLayout>
    <!-- LINEAR DIVISORIO -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/md_yellow_700"/>
    <!-- LAYOUT COMUNIDADES -->
    <LinearLayout
        android:id="@+id/datos_personales_layout_comunidades"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="20dp"
        android:paddingLeft="5dp">
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_notifications_black_24dp"
                android:background="@null" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/comunidades_interes"
                android:layout_gravity="center"
                android:paddingLeft="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="10dp"
            android:gravity="end"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/datos_personales_tvComunidades"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textSize="@dimen/txt_body2"
                android:textColor="@color/colorAccent"
                android:gravity="end"
                android:text="Catalunya, Comunitat Valenciana, Andalucia"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_gravity="center"/>
            <ImageView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_chevron_right_black_24dp"/>
        </LinearLayout>
    </LinearLayout>
    <!-- LINEAR DIVISORIO -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/md_yellow_700"/>
</LinearLayout>